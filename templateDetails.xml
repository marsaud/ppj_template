<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site">
    <name>ppj_template</name>
    <creationDate>August 2012</creationDate>
    <author>Fabrice Marsaud</author>
    <authorEmail>marsaud.fabrice@neuf.fr</authorEmail>
    <authorUrl></authorUrl>
    <copyright>Copyright (C) 2012 Caf√© Pis Plumes SARL, Inc. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <version>2.5.0</version>
    <description>TPL_BEEZ2_XML_DESCRIPTION</description>

    <files>
        <folder>css</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>javascript</folder>
        <folder>fonts</folder>
        <folder>language</folder>
        <filename>index.html</filename>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <filename>favicon.ico</filename>
        <filename>component.php</filename>
        <filename>error.php</filename>
    </files>

    <positions>
        <position>menu-position</position>
    </positions>

    <!-- 	For core templates, we also install/uninstall the language files in the core language folders.
   	-->
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.tpl_beez_20.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_beez_20.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="templatevariant" type="list" default="home" label="Template variant" description="The template variant to apply" filter="word">
                    <option value="home">home</option>
                    <option value="page">page</option>
                </field>
                <field type="text" name="path" filter="string" description="(UNUSED) Path from host to template root" label="Path" default=""/>
            </fieldset>
        </fields>
    </config>
</extension>
